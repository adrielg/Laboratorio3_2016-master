<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:isScrollContainer="true"
    android:scrollbars="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:showDividers="end">

        <TextView
            android:text="Crear Nueva Oferta Laboral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:background="?attr/colorButtonNormal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:elevation="5dp"
                android:text="Seleccione Categoría: "
                android:paddingTop="15dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold"
                android:layout_marginLeft="5dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_weight="0.07"
                android:paddingTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Descripción: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:paddingTop="15dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold"
                android:layout_marginLeft="5dp" />

            <TextView
                android:text="(tipo de proyecto, tareas a realizar)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="16.12"
                android:paddingTop="10dp"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:backgroundTint="@color/colorPrimaryDark"
            android:cursorVisible="true"
            android:drawableTint="@color/colorPrimaryDark"
            android:drawableEnd="@color/colorAccent"
            android:editable="true"
            android:lines="@android:integer/config_shortAnimTime"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:maxLines="2"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            tools:ignore="UnusedAttribute" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Horas de Trabajo:"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_marginLeft="5dp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimary"
                android:paddingTop="10dp"
                android:layout_width="165dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editText2"
                android:textSize="12sp"
                android:layout_width="60dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="$ x Hora Máx:"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimary"
                android:paddingTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="165dp" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editText3"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:text="Seleccione Moneda de Pago:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal|bold"
            android:id="@+id/textView7"
            android:layout_marginLeft="5dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="135dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:elevation="@dimen/activity_horizontal_margin"
            android:id="@+id/rdgroup"
            android:layout_marginLeft="15dp"
            android:scrollbars="vertical"
            android:gravity="bottom"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:layout_height="100dp">

            <RadioButton
                android:layout_height="wrap_content"
                android:id="@+id/radioButton1"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:paddingTop="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:drawableBottom="@drawable/ar"
                android:drawingCacheQuality="high"
                android:editable="true"
                android:elegantTextHeight="false"
                android:elevation="16dp"
                android:layout_width="70dp" />

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:layout_marginTop="0dp"
                android:paddingTop="0dp"
                android:drawableBottom="@drawable/uk" />

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3"
                android:layout_weight="0"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:drawableBottom="@drawable/br" />

            <RadioButton
                android:layout_height="wrap_content"
                android:id="@+id/radioButton4"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:drawableBottom="@drawable/eu"
                android:layout_width="70dp" />

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton5"
                android:layout_weight="0"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:drawableBottom="@drawable/us" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton6"
                android:textColor="@color/colorPrimary"
                android:padding="0dp"
                android:layout_marginTop="0dp"
                android:textSize="12sp"
                android:text="...Otro"
                android:textAlignment="textEnd"
                android:drawableStart="@drawable/desconocido" />
        </RadioGroup>
    </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="Fecha Fin Tarea:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimary"
                android:layout_weight="0"
                android:paddingTop="10dp"
                android:id="@+id/textView8" />

            <EditText
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editText4"
                android:singleLine="false"
                android:layout_weight="0.50" />

            <android.support.v7.widget.SwitchCompat
                android:layout_height="wrap_content"
                android:id="@+id/switch1"
                android:layout_width="111dp"
                android:text="Inglés"
                android:checked="false"
                android:visibility="visible"
                android:cursorVisible="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold"
                android:paddingLeft="20dp"
                android:layout_weight="0.38" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonGuardar"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="normal|bold"
                android:elevation="200dp" />

            <Button
                android:text="Cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCancelar"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="normal|bold" />
        </LinearLayout>


</LinearLayout>
</ScrollView>